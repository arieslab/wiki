.c-short-message
  background-color #151d34
  color #FFF
  padding 12px 24px
  padding-right 36px
  position relative
  border-radius 8px
  &__close
    width 20px
    height 20px
    border-radius 4px
    border 1px solid transparent
    position absolute
    right 8px
    top 8px
    background-color transparent
    color #FFF
    cursor pointer
    transition all .2s ease
    display inline-flex
    align-items center
    justify-content center
    &:hover
      background-color #FFF
      color #333
    & > *
      flex-shrink 0
