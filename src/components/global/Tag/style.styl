.c-tag
  padding 4px 8px
  display inline-block
  border none
  text-decoration none
  transition all .2s ease
  border-radius 8px
  appearance none
  position relative
  outline none
  font-size 13px
  font-weight 600
  box-sizing border-box
  text-align center
  cursor pointer
  overflow hidden
  &--sprawled
    min-width 160px
    padding 12px 48px
  &__hover
    position absolute
    left 0
    bottom 0
    background-color rgba(115, 115, 115, 0.2)
    width 100%
    height 100%
    opacity 0
    transition .1s all ease
  &:hover
    & > .c-button__hover
      opacity 1
  &__content
    position relative
    width 100%
    height 100%
    display grid
