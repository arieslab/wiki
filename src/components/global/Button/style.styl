.c-button
  padding 12px 16px
  display inline-block
  cursor pointer
  border none
  text-decoration none
  transition all .2s ease
  border-radius 8px
  appearance none
  position relative
  outline none
  font-size 14px
  height 40px
  box-sizing border-box
  text-align center
  cursor pointer
  overflow hidden
  background-color var(--default-grey)
  color #2c3e50
  @media(max-width 768px)
    font-size 13px
  &--disabled
    cursor not-allowed
    opacity .6

  &--sprawled
    min-width 160px
    padding 12px 48px
  &--circle
    width 40px
    height 40px
    border-radius 20px
  &--fit
    padding 0!important
    width auto!important
    height auto!important
  &__hover
    position absolute
    left 0
    bottom 0
    background-color rgba(115, 115, 115, 0.2)
    width 100%
    height 100%
    opacity 0
    transition .1s all ease
  &:hover
    & > .c-button__hover
      opacity 1
  &__content
    position relative
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    & >>> > *
      flex-shrink 0
