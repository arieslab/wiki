
.c-file-upload
  position relative
  &:not(:last-child)
    margin 0 0 12px
  &__label
    display flex
    justify-content space-between
    margin-bottom 4px
    width 100%
    text-align left
  &__uploader
    text-decoration none
    display inline-flex
    align-items center
    justify-content center
    font-size 0.8rem
    border-radius 8px
    cursor pointer
    outline 0
    border none
    color inherit
    line-height 0
    position relative
    min-width 40px
    min-height 40px
    padding 0 12px
    white-space nowrap
    max-width 100%
    opacity 1
    font-weight 500
    overflow hidden
    cursor pointer
    background-color #f3f3f4

    &.v--info
      color #FFF

    &.v--rounded
      border-radius 20px

    &.v--block
      display flex
      width 100%

    &-input
      position absolute
      left 0
      top 0
      right 0
      bottom 0
      width 100%
      height 100%
      background none
      opacity 0
      z-index 2
      cursor pointer
      display block
      background-image none

    &-false-btn
      cursor pointer
      z-index 1
      position relative
      left 0
      top 0
      right 0
      bottom 0
      width 100%
      height 100%
      color inherit
      overflow hidden

    &-text
      width calc(100% - 60px)
